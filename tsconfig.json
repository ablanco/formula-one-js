{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"allowJs": true,
		"declarationMap": true,
		"sourceMap": true,
		"emitDeclarationOnly": false,
		"noEmit": false
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
